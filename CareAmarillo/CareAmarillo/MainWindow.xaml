<Window x:Class="CareAmarillo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CareAmarillo"
        mc:Ignorable="d"
        Title="Page1" Height="800" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="image" HorizontalAlignment="Left" Height="339" Margin="186,-22,0,0" VerticalAlignment="Top" Width="419" Source="Capture.JPG"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="38" Margin="408,394,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197" FontSize="20" TextChanged="TextBox1_TextChanged"/>
        <Label x:Name="label" Content="CareAmarillo" HorizontalAlignment="Left" Margin="253,224,0,0" VerticalAlignment="Top" FontSize="45"/>
        <Label x:Name="label1" Content="Welcome! pleace sign in or register." HorizontalAlignment="Left" Margin="217,299,0,0" VerticalAlignment="Top" FontSize="22"/>
        <TextBox x:Name="textBox1_Copy" HorizontalAlignment="Left" Height="38" Margin="408,453,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197" FontSize="20" TextChanged="TextBox1_TextChanged"/>
        <Label x:Name="label2" Content="UserID" HorizontalAlignment="Left" Margin="253,394,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label x:Name="label2_Copy" Content="Password" HorizontalAlignment="Left" Margin="253,453,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button x:Name="button" Content="Login" HorizontalAlignment="Left" Margin="375,550,0,0" VerticalAlignment="Top" Width="124" FontSize="15" Height="33" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}"/>
        <Button x:Name="button_Copy" Content="Register for human service" HorizontalAlignment="Left" Margin="160,550,0,0" VerticalAlignment="Top" Width="186" FontSize="15" Height="33"/>
        <Button x:Name="button_Copy1" Content="Register for providers" HorizontalAlignment="Left" Margin="531,550,0,0" VerticalAlignment="Top" Width="191" FontSize="15" Height="33"/>
        <Label x:Name="label3" Content="Forgot password" HorizontalAlignment="Left" Margin="334,640,0,0" VerticalAlignment="Top" FontSize="15" Background="{x:Null}"/>

    </Grid>
</Window>
