        <Button x:Name="btnChange" Content="Forget password?" HorizontalAlignment="Left" Margin="367,723,0,0" VerticalAlignment="Top" Width="179" BorderBrush="White" Background="White" Foreground="Black" Click="BtnChange_Click" Height="25"/>
        <Image x:Name="imgHands" Height="216" Margin="207,10,226.286,0" VerticalAlignment="Top" Source="Capture.JPG" RenderTransformOrigin="0.643,0.319" Width="284"/>
        <Label x:Name="lblCare" Content="CareAmarillo" HorizontalAlignment="Left" Margin="249,191,0,0" VerticalAlignment="Top" FontSize="45" Height="69" Width="265"/>
        <Label x:Name="lblRegister" Content="Register as an emergency shelter provider" HorizontalAlignment="Left" Margin="226,250,0,0" VerticalAlignment="Top" Width="343" FontSize="17"/>
