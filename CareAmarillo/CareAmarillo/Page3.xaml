        <Label Content="Email:" HorizontalAlignment="Left" Height="42" Margin="260,438,0,0" VerticalAlignment="Top" Width="65" FontSize="20"/>
        <Label Content="Address:" HorizontalAlignment="Left" Height="42" Margin="235,486,0,0" VerticalAlignment="Top" Width="85" FontSize="20"/>
        <Label Content="Phone Number:" HorizontalAlignment="Left" Height="42" Margin="172,532,0,0" VerticalAlignment="Top" Width="148" FontSize="20"/>
        <TextBox x:Name="txtZipCode" HorizontalAlignment="Left" Height="38" Margin="348,347,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" TextAlignment="Center"/>
        <TextBox x:Name="txtBed" HorizontalAlignment="Left" Height="38" Margin="348,393,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" TextAlignment="Center"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="38" Margin="348,440,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" TextAlignment="Center"/>
        <TextBox x:Name="txtAddress" HorizontalAlignment="Left" Height="38" Margin="348,488,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" TextAlignment="Center"/>
        <TextBox x:Name="txtPhone" HorizontalAlignment="Left" Height="38" Margin="348,534,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" TextAlignment="Center"/>
        <TextBox x:Name="txtPName" HorizontalAlignment="Left" Height="38" Margin="348,298,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" TextAlignment="Center"/>
        <Label x:Name="lblCity" Content="City:" HorizontalAlignment="Left" Height="41" Margin="272,576,0,0" VerticalAlignment="Top" Width="61" FontSize="20"/>
        <Label x:Name="lblState" Content="State:" HorizontalAlignment="Left" Height="42" Margin="260,623,0,0" VerticalAlignment="Top" Width="65" FontSize="20"/>
        <TextBox x:Name="txtCity" HorizontalAlignment="Left" Height="38" Margin="348,579,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" TextAlignment="Center"/>
        <TextBox x:Name="txtState" HorizontalAlignment="Left" Height="38" Margin="348,624,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" TextAlignment="Center"/>

    </Grid>
</Window>
