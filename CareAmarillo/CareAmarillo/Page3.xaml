    <Grid>
        <Button x:Name="btnRegister" Content="Register" HorizontalAlignment="Left" Margin="475,671,0,0" VerticalAlignment="Top" Width="101" Height="38" Background="#FF75BC03" Foreground="Black" FontSize="18" BorderBrush="White" Click="BtnRegister_Click"/>
