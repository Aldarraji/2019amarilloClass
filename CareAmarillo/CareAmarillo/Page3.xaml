<Window x:Class="CareAmarillo.Page3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CareAmarillo"
        mc:Ignorable="d"
        Title="Page3" Height="800" Width="800">
    <Grid>
        <Button x:Name="btnRegister" Content="Register" HorizontalAlignment="Left" Margin="422,537,0,0" VerticalAlignment="Top" Width="108" Height="39" Background="#FF00C5FF" Foreground="White" FontSize="14" BorderBrush="#FF00F3FF"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="268,537,0,0" VerticalAlignment="Top" Width="113" BorderBrush="#FF00C5FF" Background="White" Height="39" FontSize="14" Foreground="#FF00C5FF"/>
        <TextBox x:Name="txtInfo" Height="184" Margin="108,287,0,0" TextWrapping="Wrap" Text="This entails providing the types of service the provider can offer, volunteering information, contact information and website information. This submitted information may be changed by the registered user. Additionally, emergency shelter providers can provide information on their shelters, shelter requirements for use, the number of open and available beds for use, location, and information pertaining to warming stations. This submitted information may be changed by the registered user." VerticalAlignment="Top" Width="593" RenderTransformOrigin="0.312,0.886" BorderBrush="White" Foreground="#FF9E9E9E" FontSize="16" HorizontalAlignment="Left"/>
        <Button x:Name="btnChange" Content="Change Password" HorizontalAlignment="Left" Margin="324,615,0,0" VerticalAlignment="Top" Width="158" BorderBrush="White" Background="White" Foreground="#FF00C5FF"/>
        <Image x:Name="imgHands" HorizontalAlignment="Left" Height="197" Margin="268,-12,0,0" VerticalAlignment="Top" Width="262" Source="Capture.JPG" RenderTransformOrigin="0.643,0.319"/>
        <Label x:Name="lblCare" Content="CareAmarillo" HorizontalAlignment="Left" Margin="324,132,0,0" VerticalAlignment="Top" FontSize="24" Height="95" Width="146"/>
        <Label x:Name="lblRegister" Content="Register for emergency shelter providers" HorizontalAlignment="Left" Margin="280,159,0,0" VerticalAlignment="Top" Width="230"/>

    </Grid>
</Window>
